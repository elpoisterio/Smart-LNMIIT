<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_cancel_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.elpoisterio.smartlnmiit.activity.CancelClass"
    tools:showIn="@layout/activity_cancel_class">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Class Cancellation"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_subject"
        app:hintEnabled="false"
        android:textColor="#ffffff"
        style="@style/MyTextInputLayout"
        android:layout_marginTop="48dp"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/subject"
            style="@style/MyEditText1"
            android:drawableLeft="@mipmap/ic_book_white_24dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:hint="Name of course" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_LT"
        android:layout_weight="0"
        app:hintEnabled="false"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        style="@style/MyTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/LT"
            style="@style/MyEditText1"
            android:drawableLeft="@mipmap/ic_school_white_24dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="match_parent"
            android:drawablePadding="12dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="LT No." />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_time"
        android:layout_width="match_parent"
        android:layout_weight="0"
        app:hintEnabled="false"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        style="@style/MyTextInputLayout"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/time"
            style="@style/MyEditText1"
            android:drawableLeft="@mipmap/ic_access_time_white_24dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:hint="Time slot" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_reason"
        android:layout_width="match_parent"
        android:layout_weight="0"
        app:hintEnabled="false"
        android:textColor="#ffffff"
        android:drawablePadding="12dp"
        android:layout_marginTop="12dp"
        android:textColorHint="#ffffff"

        android:inputType="text"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawablePadding="12dp"
            android:textColorHint="#ffffff"
            style="@style/MyEditText1"
            android:textColor="#ffffff"
            android:maxLines="5"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:drawableLeft="@mipmap/ic_question_answer_white_24dp"
            android:fontFamily="sans-serif-condensed"

            android:hint="Reason" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="56dp"
        android:background="@drawable/button_selector"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:shadowRadius="18"
        android:text="Send"
        android:textColor="@color/white_text"
        android:textSize="@dimen/font_size_14sp" />
</LinearLayout>
